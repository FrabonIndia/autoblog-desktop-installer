{
  "name": "autoblog-pro",
  "version": "1.0.0",
  "description": "AutoBlog Pro - AI-Powered Auto-Blogging Software",
  "main": "electron/main.js",
  "scripts": {
    "dev": "tsx server/index.ts",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && NODE_ENV=development electron .\"",
    "build": "vite build && node build-server.js",
    "build:electron": "node build-electron.js && electron-builder",
    "start": "node dist/index.js",
    "db:push": "drizzle-kit push",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.9.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "sql.js": "^1.10.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "drizzle-orm": "^0.35.1",
    "drizzle-zod": "^0.5.1",
    "express": "^4.21.0",
    "lucide-react": "^0.378.0",
    "openai": "^4.28.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "wouter": "^3.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/sql.js": "^1.4.9",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.24.0",
    "esbuild": "^0.20.1",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.autoblogpro.app",
    "productName": "AutoBlog Pro",
    "electronVersion": "28.1.3",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json",
      "LICENSE.txt"
    ],
    "asarUnpack": [
      "**/node_modules/sql.js/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/electron/dist",
        "to": ".",
        "filter": ["icudtl.dat"]
      }
    ],
    "win": {
      "target": ["nsis"]
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "license": "LICENSE.txt"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
